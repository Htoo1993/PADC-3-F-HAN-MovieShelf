<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_movie_image"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:src="@drawable/it" />

        <ImageView
            android:id="@+id/iv_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_orange_40dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="4dp"
            />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.4"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorWhite"
            />

        <ImageView
            android:id="@+id/iv_free_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_crop_free_white_24dp"
            android:layout_alignBottom="@id/iv_movie_image"
            android:layout_alignRight="@id/iv_movie_image"
            android:layout_marginRight="4dp"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/iv_movie_image"
            android:text="It"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_movie_image"
            android:text="(Drama, Horror, Thriller)"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_current_popularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_category"
            android:layout_below="@id/tv_category"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_movie_image"
            android:text="Current Popularity" />

        <LinearLayout
            android:id="@+id/ll_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_current_popularity"
            android:layout_below="@id/tv_current_popularity"
            android:layout_toRightOf="@id/tv_current_popularity"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_user_rating_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_yellow_28dp" />

            <ImageView
                android:id="@+id/iv_user_rating_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_yellow_28dp" />

            <ImageView
                android:id="@+id/iv_user_rating_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_yellow_28dp" />

            <ImageView
                android:id="@+id/iv_user_rating_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_yellow_28dp" />

            <ImageView
                android:id="@+id/iv_user_rating_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_yellow_28dp" />

            <ImageView
                android:id="@+id/iv_user_rating_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_yellow_28dp" />

            <ImageView
                android:id="@+id/iv_user_rating_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_yellow_16dp"
                android:layout_marginTop="6dp"
                />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Overview"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_alignBottom="@id/iv_movie_image"
            android:layout_marginBottom="16dp"
            android:background="@drawable/buttonshape"
            android:textColor="@color/colorWhite"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:shadowRadius="8"
            android:textAllCaps="false"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>