<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_trailer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/shaw_shank_trailer" />

        <ImageView
            android:id="@+id/iv_play_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_circle_outline_white_84dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_trailer_details_upper_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re Release Trailer"
            android:layout_alignTop="@id/iv_trailer"
            android:layout_alignRight="@id/iv_trailer"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            />

        <TextView
            android:id="@+id/tv_trailer_details_bottom_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trailer"
            android:layout_alignBottom="@id/iv_trailer"
            android:layout_alignLeft="@id/iv_trailer"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            />

    </RelativeLayout>




</android.support.v7.widget.CardView>